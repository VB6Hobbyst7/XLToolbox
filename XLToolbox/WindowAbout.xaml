<Window x:Class="XLToolbox.WindowAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:XLToolbox"
        SizeToContent="WidthAndHeight"
        Title="{x:Static l:Strings.AboutXLToolbox}">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml" />
    </Window.Resources>
    <StackPanel Orientation="Horizontal" Margin="10">
        <DockPanel VerticalAlignment="Stretch" LastChildFill="False">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <Image Source="/XLToolbox;component/images/xltoolbox-blender-small.png" Stretch="None" />
                <TextBlock FontFamily="Segoe UI" FontSize="32" FontWeight="Bold" FontStyle="Italic"
                           Foreground="DodgerBlue" TextAlignment="Center" Margin="0,0,0,10">
                    Daniel’s XL Toolbox
                </TextBlock>
                <TextBlock TextAlignment="Center" Name="TextVersion">Version</TextBlock>
                <TextBlock TextAlignment="Center" Margin="0,0,0,20">© Copyright Daniel Kraus 2014</TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical">
                <Button Name="ButtonClose" IsCancel="True" Content="{x:Static l:Strings.Close}" Click="ButtonClose_Click" />
            </StackPanel>
        </DockPanel>
    </StackPanel>
</Window>
