<Window x:Class="XLToolbox.WindowDownloadUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:XLToolbox"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static l:Strings.DownloadingXLToolboxUpdate}"
    >
    <StackPanel Margin="10">
        <ProgressBar Name="Progress" Minimum="0" Maximum="100" Width="360" Height="24" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="Cancel" IsCancel="True" Content="{x:Static l:Strings.Cancel}" Padding="10,5,10,5" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
