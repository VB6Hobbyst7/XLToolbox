<Window x:Class="XLToolbox.WindowCheckForUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:XLToolbox"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static l:Strings.CheckingForUpdates}" ResizeMode="NoResize"
    >
    <StackPanel Margin="10">
        <ProgressBar Name="ProgressBar" IsIndeterminate="True" Width="300" Height="20" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="Cancel" IsCancel="True" Content="{x:Static l:Strings.Cancel}" Padding="10,5,10,5" />
        </StackPanel>
    </StackPanel>
</Window>
