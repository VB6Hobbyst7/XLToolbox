<Window x:Class="XLToolbox.Versioning.UpdateAvailableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:l="clr-namespace:XLToolbox"
        xmlns:mvvm="clr-namespace:Bovender.Mvvm.Actions;assembly=Bovender"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight" MaxWidth="480" ResizeMode="NoResize"
        Title="{x:Static l:Strings.UpdateAvailable}"
        >
    <Window.Resources>
        <ResourceDictionary Source="/XLToolbox;component/Style.xaml" />
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger SourceObject="{Binding ChooseDestinationFolderMessage}" EventName="Sent">
            <mvvm:ChooseFolderAction Description="{x:Static l:Strings.ChooseWhereToSaveUpdateFile}" />
        </i:EventTrigger>
        <i:EventTrigger SourceObject="{Binding ReadyToDownloadMessage}" EventName="Sent">
            <mvvm:ProcessAction Assembly="XLToolbox" View="XLToolbox.Versioning.UpdaterProcessView"
                                Caption="{x:Static l:Strings.DownloadingXLToolboxUpdate}"
                                Message="{x:Static l:Strings.DownloadingXLToolboxUpdate}" />
            <!-- Important to execute the update command after creating the download progress view, -->
            <!-- since the 'download' may finish very quickly if the file exists already and can be -->
            <!-- verified. -->
            <i:InvokeCommandAction Command="{Binding DownloadUpdateCommand}" />
            <i:InvokeCommandAction Command="{Binding CloseViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <StackPanel Orientation="Horizontal" Margin="10">
        <Image Source="/XLToolbox;component/Resources/images/xltoolbox-blender-icon.png" VerticalAlignment="Top"
               Stretch="None" />
        <StackPanel>
            <TextBlock Text="{x:Static l:Strings.NewVersionAvailableForDownload}" />
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static l:Strings.YouHave}" />
                <TextBox Text="{Binding CurrentVersion, Mode=OneTime}" Grid.Column="1" Margin="0,0,0,10" />
                <Label Grid.Column="0" Grid.Row="1" Content="{x:Static l:Strings.NewVersion}" />
                <TextBox Text="{Binding NewVersion, Mode=OneTime}" Grid.Column="1" Grid.Row="1" />
            </Grid>
            <TextBlock Text="{Binding UpdateSummary, Mode=OneTime}" TextWrapping="Wrap" Margin="0,10,0,10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <UniformGrid Columns="2" Rows="1">
                    <Button Command="{Binding ChooseDestinationFolderCommand}"
                            Content="{x:Static l:Strings.DownloadNow}" Margin="0,0,10,0" Padding="10,5,10,5" />
                    <Button Command="{Binding CloseViewCommand}" IsCancel="True"
                            Content="{x:Static l:Strings.NoThanks}" Padding="10,5,10,5"  />
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
